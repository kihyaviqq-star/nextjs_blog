// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User model with Auth.js support
model User {
  id            String    @id @default(cuid())
  name          String?
  username      String?   @unique // URL-friendly username for profiles
  email         String    @unique
  password      String?   // Optional for OAuth users
  emailVerified DateTime?
  avatarUrl     String?
  bio           String?
  role          String    @default("USER") // USER, EDITOR, or ADMIN
  
  // Social links
  telegram      String?
  vk            String?
  twitter       String?
  github        String?
  linkedin      String?
  website       String?
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  posts         Post[]
  accounts      Account[]
  sessions      Session[]
}

// Auth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Blog Post model
model Post {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  excerpt     String
  coverImage  String?
  tags        String   // JSON string array
  content     String   // JSON string
  sources     String?  // JSON string array of source URLs
  publishedAt DateTime @default(now())
  readTime    String
  views       Int      @default(0) // View counter for analytics
  
  // Author relation
  authorId    String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([authorId])
  @@index([slug])
  @@index([views]) // Index for sorting by popularity
  @@index([publishedAt]) // Index for navigation
}

// Site Settings (Singleton)
model SiteSettings {
  id              String   @id @default("default")
  siteName        String   @default("Blog")
  logoUrl         String?
  faviconUrl      String?
  metaDescription String?  @default("Информационный портал о последних новостях и разработках в области искусственного интеллекта")
  footerText      String?  @default("Сделано с ❤ для всех, кто интересуется ИИ")
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// RSS Sources for article generator
model RSSSource {
  id        String   @id @default(cuid())
  name      String
  url       String
  enabled   Boolean  @default(true)
  isDefault Boolean  @default(false) // Predefined sources that cannot be deleted
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([url])
  @@index([enabled])
}